<%- include('../../views/partials/user/header', {title: 'Profile'}) %>

<!-- Main Content Wrapper with Flex Layout -->
<div class="min-h-screen flex flex-col">
    <!-- Content Container that grows -->
    <div class="container mx-auto px-4 py-8 max-w-6xl flex-grow">
        <!-- Profile Header -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800">YOUR ACCOUNT <% if (locals.user) { %>
                 <span class="text-blue-600"><%= locals.user.name %></span>
                <% } %></h1>
                <p class="text-gray-500 mt-1">Manage your account settings</p>
            </div>
            <button onclick="window.location.href = '/logout'" class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors shadow-md w-full sm:w-auto text-center">
                LOGOUT
            </button>
        </div>

        <!-- Account Sections Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <!-- Your Orders -->
            <div class="bg-white p-6 rounded-xl hover:bg-amber-100 shadow-sm hover:shadow-2xl  transition-shadow border border-amber-100 flex items-start h-full cursor-pointer" style="border-left: 4px solid burlywood">
                <div class="bg-amber-100 p-3 rounded-lg mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Your Orders</h2>
                    <p class="text-gray-500 mt-2 text-sm">Track, return, or cancel orders</p>
                    <span class="inline-block mt-3 text-blue-500 text-sm font-medium">View history →</span>
                </div>
            </div>

            <!-- Login & Security -->
            <div class="bg-white p-6 rounded-xl hover:bg-green-100 shadow-sm hover:shadow-2xl transition-shadow border border-green-100 flex items-start h-full cursor-pointer " style="border-left: 4px solid green">
                <div class="bg-green-100 p-3 rounded-lg mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Login & Security</h2>
                    <p class="text-gray-500 mt-2 text-sm">Edit name, password and email</p>
                    <span class="inline-block mt-3 text-blue-500 text-sm font-medium">Update settings →</span>
                </div>
            </div>

            <!-- Address -->
            <div class="bg-white p-6 rounded-xl hover:bg-blue-100 shadow-sm hover:shadow-2xl transition-shadow border border-blue-100 flex items-start h-full cursor-pointer" style="border-left: 4px solid #3b82f6;">
                <div class="bg-blue-100 p-3 rounded-lg mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Address</h2>
                    <p class="text-gray-500 mt-2 text-sm">Add or edit delivery addresses</p>
                    <span class="inline-block mt-3 text-blue-500 text-sm font-medium">Manage addresses →</span>
                </div>
            </div>

            <!-- Your Wallet -->
            <div class="bg-white p-6 rounded-xl hover:bg-purple-100 shadow-sm hover:shadow-2xl transition-shadow border border-purple-100 flex items-start h-full cursor-pointer" style="border-left: 4px solid purple">
                <div class="bg-purple-100 p-3 rounded-lg mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a1 1 0 11-2 0 1 1 0 012 0z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Your Wallet</h2>
                    <p class="text-gray-500 mt-2 text-sm">Add or check balance</p>
                    <span class="inline-block mt-3 text-blue-500 text-sm font-medium">View wallet →</span>
                </div>
            </div>

            <!-- Available Coupon -->
            <div class="bg-white p-6 rounded-xl hover:bg-red-100 shadow-sm hover:shadow-2xl transition-shadow border border-red-100 flex items-start h-full cursor-pointer" style="border-left: 4px solid red">
                <div class="bg-red-100 p-3 rounded-lg mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-800">Available Coupons</h2>
                    <p class="text-gray-500 mt-2 text-sm">Get special offers</p>
                    <span class="inline-block mt-3 text-blue-500 text-sm font-medium">View coupons →</span>
                </div>
            </div>

            <!-- Empty Card for Future Use -->
            <div class="bg-gray-50 p-6 rounded-xl border-2 border-dashed border-gray-200 flex items-center justify-center h-full min-h-[160px]">
                <p class="text-gray-400 text-center">More features coming soon</p>
            </div>
        </div>
    </div> <!-- End of content container -->

    <!-- Footer will now stick to the bottom -->
    <%- include('../../views/partials/user/footer') %>
</div> <!-- End of flex container -->